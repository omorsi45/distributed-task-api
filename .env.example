# Server
SERVER_PORT=8080

# Database
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/taskdb
SPRING_DATASOURCE_USERNAME=taskuser
SPRING_DATASOURCE_PASSWORD=taskpass

# Cache: use 'redis' for Redis, 'caffeine' for in-memory (default)
CACHE_PROVIDER=caffeine
# Redis (when CACHE_PROVIDER=redis)
REDIS_HOST=localhost
REDIS_PORT=6379

# Security
API_KEY=your-secret-api-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production

# Rate limit (requests per minute per key)
RATE_LIMIT_PER_MINUTE=100

# Idempotency key TTL in hours
IDEMPOTENCY_KEY_TTL_HOURS=24
